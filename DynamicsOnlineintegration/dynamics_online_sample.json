    {
        "id": "1d93a8ef.b4f487",
        "type": "function",
        "z": "a05dd4de.c6c918",
        "name": "build v2 token request",
        "func": "const tenant = env.get(\"TENANT_ID\");\nconst org = env.get(\"D365_ORG_URL\");\nconst clientId = env.get(\"CLIENT_ID\");\nconst clientSecret = env.get(\"CLIENT_SECRET\");\nif (!tenant || !org || !clientId || !clientSecret) {\n    node.error(\"Subflow env vars not set: TENANT_ID, D365_ORG_URL, CLIENT_ID, CLIENT_SECRET\", msg);\n    return null;\n}\nmsg.url = `https://login.microsoftonline.com/${tenant}/oauth2/v2.0/token`;\nmsg.headers = { 'Content-Type': 'application/x-www-form-urlencoded' };\nmsg.payload = {\n    client_id: clientId,\n    client_secret: clientSecret,\n    grant_type: 'client_credentials',\n    scope: org.replace(/\\/+$/,'') + '/.default'\n};\nmsg.method = 'POST';\nreturn msg;",
        "outputs": 1,
        "noerr": 0,
        "initialize": "",
        "finalize": "",
        "libs": [],
        "x": 520,
        "y": 200,
        "wires": [
            [
                "68bcdac4.df00e4"
            ]
        ]
    },
