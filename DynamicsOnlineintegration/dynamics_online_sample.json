    {
        "id": "8b51df6f.c4e18",
        "type": "function",
        "z": "a05dd4de.c6c918",
        "name": "save token",
        "func": "// Persist token and expiry using expires_in (with 60s safety)\nconst at = msg.payload && msg.payload.access_token;\nconst ttl = msg.payload && (msg.payload.expires_in || 3600);\nif (!at) {\n    node.error(\"No access_token in token response\", msg);\n    return null;\n}\nconst exp = Date.now() + Math.max(0, (ttl - 60)) * 1000;\nflow.set(\"dv_at\", at);\nflow.set(\"dv_exp\", exp);\nflow.set(\"dv_org\", env.get(\"D365_ORG_URL\"));\n// Optional: keep legacy globals for older nodes\nglobal.set(\"dynat\", at);\nglobal.set(\"dynexpire\", new Date(exp));\nmsg.access_token = at;\nreturn msg;",
        "outputs": 1,
        "noerr": 0,
        "initialize": "",
        "finalize": "",
        "libs": [],
        "x": 720,
